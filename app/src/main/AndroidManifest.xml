<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fcd.glasgowcycling"
    android:installLocation="internalOnly" >

    <application
        android:name=".CyclingApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="GlasgowCycling.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="3" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAFp8nxLgf4YZOcn3U4_Ny9iyYCRAZmwjQ" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activities.LaunchActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name=".activities.UserOverviewActivity"
            android:label="@string/title_activity_user_overview"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activities.SearchActivity" />
        </activity>
        <activity
            android:name=".activities.RouteListActivity"
            android:label="@string/title_activity_route_list"
            android:parentActivityName=".activities.UserOverviewActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.RouteCaptureActivity"
            android:label="@string/title_activity_route_capture"
            android:parentActivityName=".activities.UserOverviewActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fcd.glasgowcycling.activities.UserOverviewActivity" />
        </activity>
        <activity
            android:name=".activities.RouteOverviewActivity"
            android:label="@string/title_activity_route_overview"
            android:parentActivityName=".activities.RouteListActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="RouteListActivity" />
        </activity>
        <activity
            android:name=".activities.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".activities.SignInActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fcd.glasgowcycling.activities.SignInActivity" />
        </activity>
        <activity
            android:name=".activities.SearchActivity"
            android:label="@string/title_activity_search"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.UserOverviewActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>

        <service
            android:name=".api.auth.AuthenticatorService"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <activity
            android:name=".activities.AccountSettingsActivity"
            android:label="@string/title_activity_account_settings"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".activities.AccountPasswordActivity"
            android:label="@string/title_activity_account_password"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.AccountForgottenActivity"
            android:label="@string/title_activity_account_forgotten"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.CycleMapActivity"
            android:label="@string/title_activity_cycle_map"
            android:parentActivityName=".activities.UserOverviewActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.UserStatsActivity"
            android:label="@string/title_activity_user_stats"
            android:parentActivityName=".activities.UserOverviewActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.WelcomeActivity"
            android:label="@string/title_activity_welcome"
            android:screenOrientation="portrait">
        </activity>
        <meta-data android:name="com.crashlytics.ApiKey" android:value="bfe078d6ca5ea6f9689b7a5b694662ca3ebda224"/>
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

</manifest>
