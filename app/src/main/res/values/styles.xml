<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/JCActionBar</item>
    </style>
    <style name="JCActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/JCActionBar.TitleTextStyle</item>
        <item name="android:background">@color/jcBlueColor</item>
        <item name="android:actionBarStyle">@style/JCActionBar.Icon</item>
        <item name="android:actionMenuTextColor">@color/jcWhiteColor</item>
        <item name="android:actionBarWidgetTheme">@style/JCActionBar.Widget</item>
    </style>

    <style name="JCActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/jcWhiteColor</item>
    </style>

    <style name="JCActionBar.Icon" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:icon">@drawable/cyclist</item>
    </style>

    <style name="JCActionBar.Widget" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:textColor">@color/jcWhiteColor</item>
        <item name="android:background">@color/jcDarkBlueColor</item>
    </style>
</resources>
